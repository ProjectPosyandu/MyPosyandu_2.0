<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_ibu.TambahBayiFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATA BAYI"
                    android:textSize="20dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Bayi"
                    android:textSize="15sp"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/daNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Tanggal Lahir"
                    android:textSize="15sp"
                    android:textColor="#000" />
                <Button
                    android:id="@+id/btnTanggal"
                    android:text="Pilih Tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Jenis Kelamin"
                    android:textSize="15sp"
                    android:textColor="#000" />

                <RadioGroup
                    android:layout_marginTop="10dp"
                    android:id="@+id/rbJenis"
                    android:checked="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbCowok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Laki-Laki          " />

                    <RadioButton
                        android:id="@+id/rbCewek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perempuan" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="ini id"
                    android:textSize="15sp"
                    android:textColor="#fff" />
                <TextView
                    android:id="@+id/tvTgl"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="ini tgl"
                    android:textSize="15sp"
                    android:textColor="#fff" />

            </LinearLayout>

            <Button
                android:id="@+id/btnTambah"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center_vertical|center"
                android:text="Tambahkan Bayi"
                android:layout_marginBottom="25dp"
                android:background="@drawable/rec_gradient"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>